<odoo>
    <!-- 1. Create the Announcements blog container -->
    <record id="blog_announcements" model="blog.blog">
        <field name="name">Sample Posts</field>
        <field name="subtitle">Sample Posts as Template</field>
        <field name="website_id" ref="website.default_website"/>
    </record>

    <!-- 2. Announcement: Forms -->
    <record id="announcement_forms" model="blog.post">
        <field name="name">Forms</field>
        <field name="blog_id" ref="blog_announcements"/>
        <field name="website_published">True</field>
        <field name="content">
            <![CDATA[
                <h2>Forms Announcement</h2>
                <p>Please fill out the necessary forms for registration. You can download the forms from the Forms section.</p>
            ]]>
        </field>
    </record>

    <!-- 3. Announcement: Houses -->
    <record id="announcement_houses" model="blog.post">
        <field name="name">Houses</field>
        <field name="blog_id" ref="blog_announcements"/>
        <field name="website_published">True</field>
        <field name="content">
            <![CDATA[
                <h2>Houses Announcement</h2>
                <p>Check out the latest updates on houses and available units. Contact the office for more details.</p>
            ]]>
        </field>
    </record>
</odoo>