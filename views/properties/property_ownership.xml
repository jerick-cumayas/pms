<!-- Property ownership Views -->
<odoo>
    <record id="view_property_ownership_list" model="ir.ui.view">
        <field name="name">property.ownership.list</field>
        <field name="model">property.ownership</field>
        <field name="arch" type="xml">
            <list string="Property ownerships">
                <field name="unit_id"/>
                <field name="main_partner_id"/>
                <field name="start_date"/>
            </list>
        </field>
    </record>

    <record id="view_property_ownership_form" model="ir.ui.view">
        <field name="name">property.ownership.form</field>
        <field name="model">property.ownership</field>
        <field name="arch" type="xml">
            <form string="Property Ownerships">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <group>
                        <field name="unit_id"/>
                        <field name="main_partner_id"/>
                        <field name="member_ids" widget="one2many"/>
                        <field name="start_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_property_ownership" model="ir.actions.act_window">
        <field name="name">Property Ownerships</field>
        <field name="res_model">property.ownership</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
