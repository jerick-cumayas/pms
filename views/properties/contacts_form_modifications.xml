<odoo>
    <record id="view_partner_form_inherit_properties" model="ir.ui.view">
        <field name="name">res.partner.form.properties</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Locate the notebook -->
            <xpath expr="//notebook" position="inside">
                <!-- Add new page -->
                <page string="Properties" name="property_units">
                    <group string="Owned Units">
                        <field name="owned_unit_ids" widget="many2many_tags" readonly="1">
                            <list string="Owned Units">
                                <field name="name"/>
                                <field name="building_id"/>
                            </list>
                        </field>
                    </group>
                    <group string="Rented Units">
                        <field name="rented_unit_ids" widget="many2many_tags" readonly="1">
                            <list string="Rented Units">
                                <field name="name"/>
                                <field name="building_id"/>
                            </list>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
