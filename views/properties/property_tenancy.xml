<!-- Property tenancy Views -->
<odoo>
    <record id="view_property_tenancy_list" model="ir.ui.view">
        <field name="name">property.tenancy.list</field>
        <field name="model">property.tenancy</field>
        <field name="arch" type="xml">
            <list string="Property tenancys">
                <field name="unit_id"/>
                <field name="main_partner_id"/>
                <field name="start_date"/>
            </list>
        </field>
    </record>

    <record id="view_property_tenancy_form" model="ir.ui.view">
        <field name="name">property.tenancy.form</field>
        <field name="model">property.tenancy</field>
        <field name="arch" type="xml">
            <form string="Property Tenancy">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <group>
                        <field name="unit_id"/>
                        <field name="main_partner_id"/>
                        <field name="member_ids" widget="one2many"/>
                        <field name="start_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_property_tenancy" model="ir.actions.act_window">
        <field name="name">Property Tenancies</field>
        <field name="res_model">property.tenancy</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
