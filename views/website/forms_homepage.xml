<odoo>
    <template id="website_form_homepage" name="Form Selection">
        <t t-call="website.layout">
            <div class="container mt-5 mb-5 d-flex flex-column gap-4">
                <h1 class="mb-4">Select a Form to Submit</h1>
                <div class="row">
                    <!-- Pet Reservation Form Card -->
                    <div class="col-md-4">
                        <a href="/forms/pet-registration" class="card h-100 border shadow-sm text-left">
                            <div class="card-body d-flex flex-column align-items-left justify-content-left">
                                <div class="mb-3" style="height:100px; width:100px">
                                </div>
                                <h5 class="card-title">Pet Registration</h5>
                                <span class="fw-bold text-primary mt-auto">Fill Form →</span>
                            </div>
                        </a>
                    </div>

                    <!-- Amenities Reservation -->
                    <div class="col-md-4">
                        <a href="/forms/amenities-reservation" class="card h-100 border shadow-sm text-left">
                            <div class="card-body d-flex flex-column align-items-left justify-content-left">
                                <div class="mb-3" style="height:100px; width:100px">
                                </div>
                                <h5 class="card-title">Amenities Reservation</h5>
                                <span class="fw-bold text-primary mt-auto">Fill Form →</span>
                            </div>
                        </a>
                    </div>

                    <!-- Unit Owner Information -->
                    <div class="col-md-4">
                        <a href="/forms/unit-owner-info" class="card h-100 border shadow-sm text-left">
                            <div class="card-body d-flex flex-column align-items-left justify-content-left">
                                <div class="mb-3" style="height:100px; width:100px">
                                </div>
                                <h5 class="card-title">Unit Owner Info</h5>
                                <span class="fw-bold text-primary mt-auto">Fill Form →</span>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="row">
                    <!-- Tenant Information -->
                    <div class="col-md-4">
                        <a href="/forms/tenant-info" class="card h-100 border shadow-sm text-left">
                            <div class="card-body d-flex flex-column align-items-left justify-content-left">
                                <div class="mb-3" style="height:100px; width:100px">
                                </div>
                                <h5 class="card-title">Tenant Information</h5>
                                <span class="fw-bold text-primary mt-auto">Fill Form →</span>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/forms/unit-owner" class="card h-100 border shadow-sm text-left">
                            <div class="card-body d-flex flex-column align-items-left justify-content-left">
                                <div class="mb-3" style="height:100px; width:100px">
                                </div>
                                <h5 class="card-title">Inspection Report</h5>
                                <span class="fw-bold text-primary mt-auto">Fill Form →</span>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/forms/unit-owner" class="card h-100 border shadow-sm text-left">
                            <div class="card-body d-flex flex-column align-items-left justify-content-left">
                                <div class="mb-3" style="height:100px; width:100px">
                                </div>
                                <h5 class="card-title">Construction Entry</h5>
                                <span class="fw-bold text-primary mt-auto">Fill Form →</span>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <a href="/forms/cctv-request" class="card h-100 border shadow-sm text-left">
                            <div class="card-body d-flex flex-column align-items-left justify-content-left">
                                <div class="mb-3" style="height:100px; width:100px">
                                </div>
                                <h5 class="card-title">CCTV Request</h5>
                                <span class="fw-bold text-primary mt-auto">Fill Form →</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
