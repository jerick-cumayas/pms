<odoo>
    <template id="spouse_person_base_form" name="Spouse Base Form">
        <div id="base-form-container" class="container">
            <div class="row form-group">
                <div class="col-md-4">
                    <label for="s_first_name">First Name</label>
                    <input type="text" name="s_first_name" id="s_first_name" class="form-control" required="required"/>
                </div>

                <div class="col-md-4">
                    <label for="s_middle_name">Middle Name</label>
                    <input type="text" name="s_middle_name" id="s_middle_name" class="form-control" required="required"/>
                </div>

                <div class="col-md-4">
                    <label for="s_last_name">Last Name</label>
                    <input type="text" name="s_last_name" id="s_last_name" class="form-control" required="required"/>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-4">
                    <label for="s_age">Age</label>
                    <input type="number" name="s_age" id="s_age" class="form-control" required="required"/>
                </div>
                <div class="col-md-4">
                    <label for="s_gender">Gender</label>
                    <select name="s_gender" class="form-control">
                        <option value="">--Select--</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="s_birthday">Birthday</label>
                    <input type="date" name="s_birthday" id="s_birthday" class="form-control" required="required"/>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-4">
                    <label for="s_civil_status">Civil Status</label>
                    <select name="s_civil_status" class="form-control">
                        <option value="">--Select--</option>
                        <option value="single">Single</option>
                        <option value="married">Married</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="s_religion">Religion</label>
                    <input type="text" name="s_religion" id="s_religion" class="form-control" required="required"/>
                </div>
                <div class="col-md-4">
                    <label for="s_nationality">Nationality</label>
                    <input type="text" name="s_nationality" id="s_nationality" class="form-control" required="required"/>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-4">
                    <label for="s_office_business">Office/Business Name</label>
                    <input type="text" name="s_office_business" id="s_office_business" class="form-control" required="required"/>
                </div>
                <div class="col-md-4">
                    <label for="s_position">Position</label>
                    <input type="text" name="s_position" id="s_position" class="form-control" required="required"/>
                </div>
                <div class="col-md-4">
                    <label for="s_occupation">Occupation</label>
                    <input type="text" name="s_occupation" id="s_occupation" class="form-control" required="required"/>
                </div>
            </div>

            <h2 class="fs-4 mt-3">Contact Information</h2>
            <div class="row">
                <div class="col-md-4">
                    <label for="s_email">Email Address</label>
                    <input type="text" name="s_email" id="s_email" class="form-control" required="required"/>
                </div>
                <div class="col-md-4">
                    <label for="s_mobile_number">Mobile Number</label>
                    <input type="text" name="s_mobile_number" id="s_mobile_number" class="form-control" required="required"/>
                </div>
            </div>
            
            <h2 class="fs-4 mt-3">Addresses</h2>
            <div class="row">
                <div class="col-md-8">
                    <label for="s_home_mailing_address">Home Mailing Address</label>
                    <input type="text" name="s_home_mailing_address" id="s_home_mailing_address" class="form-control" required="required"/>
                </div>
                <div class="col-md-4">
                    <label for="s_home_mailing_address_tel_no">Tel No.(Residence)</label>
                    <input type="text" name="s_home_mailing_address_tel_no" id="s_home_mailing_address_tel_no" class="form-control" required="required"/>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <label for="s_office_address">Office Address</label>
                    <input type="text" name="s_office_address" id="s_office_address" class="form-control" required="required"/>
                </div>
                <div class="col-md-4">
                    <label for="s_office_address_tel_no">Tel No.(Office)</label>
                    <input type="text" name="s_office_address_tel_no" id="s_office_address_tel_no" class="form-control" required="required"/>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <label for="s_abroad_address">Abroad Address</label>
                    <input type="text" name="s_abroad_address" id="s_abroad_address" class="form-control" required="required"/>
                </div>
                <div class="col-md-4">
                    <label for="s_abroad_address_tel_no">Tel No.(Abroad)</label>
                    <input type="text" name="s_abroad_address_tel_no" id="s_abroad_address_tel_no" class="form-control" required="required"/>
                </div>
            </div>
        </div>
    </template>
</odoo>