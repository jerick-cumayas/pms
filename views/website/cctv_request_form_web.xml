<odoo>
    <template id="website_cctv_request_form" name="CCTV Request Form">
        <t t-call="website.layout">
            <div class="container mt-4 mb-4">
                <h2 class="mb-4">
                    CCTV Request Form
                </h2>

                <form action="/forms/cctv_request/submit" method="post" class="o_website_form">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <!-- Incident Details -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Incident Details</h5>

                            <div class="mb-3">
                                <label class="form-label">Incident Date</label>
                                <input type="date" name="incident_datetime" class="form-control" required="required"/>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Location</label>
                                <input type="text" name="location" class="form-control" required="required"/>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Camera Number</label>
                                <input type="text" name="camera_number" class="form-control"/>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Purpose of Request</label>
                                <textarea name="purpose" class="form-control" rows="3"/>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description of Incident</label>
                                <textarea name="description" class="form-control" rows="4"/>
                            </div>
                        </div>
                    </div>

                    <!-- Submit -->
                    <div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            Submit Request
                        </button>
                    </div>

                </form>

            </div>
        </t>
    </template>
</odoo>
