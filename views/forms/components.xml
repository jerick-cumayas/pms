<odoo>
    <record id="view_reviewers_list" model="ir.ui.view">
        <field name="name">reviewers.list</field>
        <field name="model">form.reviewer</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="false" edit="true" delete="true">
                <field name="review_for" readonly="1"/>
                <field name="reviewer_id" widget="many2one_avatar" readonly="1"/>
                <field name="state"/>
                <field name="remarks"/>
            </list>
        </field>
    </record>
</odoo>
