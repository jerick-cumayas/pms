<odoo>
    <!-- Action -->
    <record id="action_vehicle_pass_form" model="ir.actions.act_window">
        <field name="name">Vehicle Passes</field>
        <field name="res_model">forms.vehicle_pass</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create vehicle pass applications here.
            </p>
        </field>
    </record>

    <!-- List (list) View -->
    <record id="view_vehicle_pass_list" model="ir.ui.view">
        <field name="name">forms.vehicle_pass.list</field>
        <field name="model">forms.vehicle_pass</field>
        <field name="arch" type="xml">
            <list string="Vehicle Passes">
                <field name="application_type"/>
                <field name="vehicle_ownership"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_vehicle_pass_form" model="ir.ui.view">
        <field name="name">forms.vehicle_pass.form</field>
        <field name="model">forms.vehicle_pass</field>
        <field name="arch" type="xml">
            <form string="Vehicle Pass">
                <header>
                    <button name="action_submit"
                        string="Submit"
                        type="object"
                        class="btn-primary"
                        invisible="not can_submit"/>

                    <button name="action_under_review"
                            string="Under Review"
                            type="object"
                            class="btn-primary"
                            invisible="not can_under_review"/>

                    <button name="%(action_assign_reviewers_wizard)d"
                            type="action"
                            string="Assign Reviewer"
                            class="oe_highlight"
                            context="{'default_form_model': 'forms.cctv', 'default_form_id': id}"
                            invisible="state not in ('submitted')"/>

                    <button name="action_quotation"
                            string="For Quotation"
                            type="object"
                            class="btn-primary"
                            invisible="not can_quotation"/>

                    <button name="action_send_quotation"
                            string="Send Quotation"
                            type="object"
                            class="btn-secondary"
                            invisible="state != 'quotation' or quotation_id"/>

                    <button name="action_invoice"
                            string="For Invoice"
                            type="object"
                            class="btn-primary"
                            invisible="not can_invoice"/>

                    <button name="action_complete"
                            string="Complete"
                            type="object"
                            class="btn-primary"
                            invisible="not can_complete"/>

                    <button name="action_reject"
                            string="Reject"
                            type="object"
                            class="btn-secondary"
                            invisible="not can_reject"/>

                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            class="btn-secondary"
                            invisible="not can_cancel"/>

                    <button name="action_draft"
                            string="Reset to Draft"
                            type="object"
                            class="btn-secondary"
                            invisible="not can_draft"/>
                    <field name="state" widget="statusbar" clickable="1" statusbar_visible="draft,submitted,under_review,quotation,invoice,completed,rejected,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_quotation"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text-o"
                                invisible="not quotation_id">
                            <field name="quotation_id"
                                   widget="statinfo"
                                   string="Quotation"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" invisible="not state in ('draft')" title="Draft" bg_color="text-bg-secondary"/>
                    <widget name="web_ribbon" invisible="not state in ('submitted')" title="Submitted" bg_color="text-bg-primary"/>
                    <widget name="web_ribbon" invisible="not state in ('under_review')" title="Under Review" bg_color="text-bg-warning"/>
                    <widget name="web_ribbon" invisible="not state in ('completed')" title="Completed" bg_color="text-bg-success"/>
                    <widget name="web_ribbon" invisible="not state in ('rejected')" title="Rejected" bg_color="text-bg-dark"/>
                    <widget name="web_ribbon" invisible="not state in ('cancelled')" title="Cancelled" bg_color="text-bg-danger"/>
                    <div class="alert alert-warning"
                        role="alert"
                        invisible="state in ('draft', 'completed', 'rejected', 'cancelled') or reviewer_ids">
                        ⚠ Please assign at least one reviewer before moving to next phase.
                    </div>
                    <div class="alert alert-info"
                        role="alert"
                        invisible="not review_incomplete">
                        ℹ All assigned reviewers should complete their review before marking this form as Completed.
                    </div>
                    <div class="alert alert-success"
                        role="alert"
                        invisible="not can_complete">
                        ✅ All reviewers have completed their review. You may now mark this form as Completed.
                    </div>
                    <group>
                        <field name="requestor_id" readonly="is_locked"/>
                        <field name="application_type" readonly="is_locked"/>
                        <field name="vehicle_ownership" readonly="is_locked"/>
                    </group>
                    <notebook>
                        <page string="Vehicle Details">
                            <group>
                                <field name="type" readonly="is_locked"/>
                                <field name="color" readonly="is_locked"/>
                                <field name="plate_no" readonly="is_locked"/>
                            </group>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" readonly="is_locked">
                                <list>
                                    <field name="name" widget="download_link"/>
                                    <field name="mimetype"/>
                                    <field name="create_date"/>
                                    <field name="write_uid" string="Uploaded By"/>
                                    <!-- <field name="datas" widget="image"/> -->
                                    <field name="datas" widget="image" options="{'size': (64, 64)}"/>
                                </list>
                            </field>
                        </page>
                        <page string="Reviews / Remarks">
                            <group>
                                <field name="reviewer_ids"
                                    nolabel="1"
                                    mode="list,form"
                                    options="{'list_view_ref': 'pms.view_reviewers_list'}"
                                    readonly="review_section_locked"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
