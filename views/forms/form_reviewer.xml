<odoo>
    <record id="view_form_reviewer_form" model="ir.ui.view">
        <field name="name">form.reviewer.form</field>
        <field name="model">form.reviewer</field>
        <field name="arch" type="xml">
            <form string="Reviewers">
                <sheet>
                    <group>
                        <field name="form_model" readonly="1"/>
                        <field name="form_id" readonly="1"/>
                        <field name="reviewer_id" readonly="1"/>
                        <field name="review_for" readonly="1"/>
                        <field name="state"/>
                        <field name="review_date"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
